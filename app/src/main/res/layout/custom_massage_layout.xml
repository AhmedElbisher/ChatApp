<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/massageImage"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/profile_image"
        app:civ_border_color="@android:color/darker_gray"
        app:civ_border_width="2dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_toEndOf="@+id/massageImage"
        android:text="sender  massage text"
        android:paddingStart="8dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"
        android:textSize="15dp"
        android:id="@+id/senderMassageText"
        android:background="@drawable/send_massage_shape">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="recieved  massage text"
        android:paddingStart="8dp"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:layout_marginTop="8dp"
        android:id="@+id/recievedMassageText"
        android:background="@drawable/recierved_massage_shape">

    </TextView>

    <ImageView
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:id="@+id/messageImageSender"
        android:src="@drawable/file"
        android:visibility="gone"
        android:layout_below="@+id/senderMassageText"
        android:layout_toEndOf="@id/massageImage"
        android:padding="8dp"
        android:backgroundTint="@android:color/white"
        />

    <ImageView
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:id="@+id/messageImagereciever"
        android:src="@drawable/file"
        android:layout_below="@+id/recievedMassageText"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:visibility="gone"
        android:backgroundTint="@android:color/white"
        />





</RelativeLayout>